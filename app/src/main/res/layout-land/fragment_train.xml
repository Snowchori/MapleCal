<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.TrainFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="20dp"
            android:background="@color/white"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/cal_button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp">

                <EditText
                    android:id="@+id/nickname"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:hint="@string/nickname"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/search_button"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/search_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/skyblue"
                    android:text="@string/search"
                    android:textColor="@color/black"
                    android:layout_marginTop="20dp"
                    app:layout_constraintStart_toEndOf="@id/nickname"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/level"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="@string/level"
                    android:textSize="20sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/level_edit"
                    app:layout_constraintTop_toBottomOf="@id/nickname" />

                <TextView
                    android:id="@+id/exp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/exp_per"
                    android:textSize="20sp"
                    android:layout_marginTop="20dp"
                    app:layout_constraintStart_toEndOf="@id/level_edit"
                    app:layout_constraintEnd_toStartOf="@id/exp_edit"
                    app:layout_constraintTop_toBottomOf="@id/nickname"/>

                <EditText
                    android:id="@+id/level_edit"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    app:layout_constraintTop_toBottomOf="@id/nickname"
                    app:layout_constraintStart_toEndOf="@id/level"
                    app:layout_constraintEnd_toStartOf="@id/exp"/>

                <EditText
                    android:id="@+id/exp_edit"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    app:layout_constraintStart_toEndOf="@id/exp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/nickname"/>

                <TextView
                    android:id="@+id/hour_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/time"
                    android:textSize="15sp"
                    app:layout_constraintTop_toBottomOf="@id/level_edit"
                    app:layout_constraintStart_toStartOf="@id/hour_edit"
                    app:layout_constraintBottom_toTopOf="@id/hour_edit"/>

                <TextView
                    android:id="@+id/level_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/level"
                    android:textSize="15sp"
                    app:layout_constraintStart_toStartOf="@id/edit_level"
                    app:layout_constraintTop_toBottomOf="@id/hour_edit"
                    app:layout_constraintBottom_toTopOf="@id/edit_level"/>

                <EditText
                    android:id="@+id/hour_edit"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/hour_text"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/rightarrow"
                    app:layout_constraintBottom_toTopOf="@id/level_text"/>

                <EditText
                    android:id="@+id/edit_level"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/rightarrow2"
                    app:layout_constraintTop_toBottomOf="@id/level_text"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <ImageView
                    android:id="@+id/rightarrow"
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:src="@drawable/rightarrow"
                    app:layout_constraintStart_toEndOf="@id/hour_edit"
                    app:layout_constraintEnd_toStartOf="@id/level_result_edit"
                    app:layout_constraintTop_toBottomOf="@id/level_edit"
                    app:layout_constraintBottom_toTopOf="@id/rightarrow2"/>

                <ImageView
                    android:id="@+id/rightarrow2"
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:src="@drawable/rightarrow"
                    app:layout_constraintStart_toEndOf="@id/edit_level"
                    app:layout_constraintEnd_toStartOf="@id/hour_result_edit"
                    app:layout_constraintTop_toBottomOf="@id/rightarrow"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <TextView
                    android:id="@+id/level_result"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/level"
                    android:textSize="15sp"
                    app:layout_constraintStart_toStartOf="@id/level_result_edit"
                    app:layout_constraintTop_toBottomOf="@id/level_edit"
                    app:layout_constraintBottom_toTopOf="@id/level_result_edit"/>

                <TextView
                    android:id="@+id/hour_result"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/time"
                    android:textSize="15sp"
                    app:layout_constraintStart_toStartOf="@id/hour_result_edit"
                    app:layout_constraintTop_toBottomOf="@id/level_result_edit"
                    app:layout_constraintBottom_toTopOf="@id/hour_result_edit"/>

                <EditText
                    android:id="@+id/level_result_edit"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:enabled="false"
                    app:layout_constraintStart_toEndOf="@id/rightarrow"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/level_result"
                    app:layout_constraintBottom_toTopOf="@id/hour_result"/>

                <EditText
                    android:id="@+id/hour_result_edit"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:enabled="false"
                    app:layout_constraintStart_toEndOf="@id/rightarrow2"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/hour_result"
                    app:layout_constraintBottom_toBottomOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </ScrollView>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/cal_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:background="@color/skyblue"
            android:text="@string/calculate"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>